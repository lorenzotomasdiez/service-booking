# Environment Configuration
NODE_ENV=development
APP_NAME=BarberPro
APP_VERSION=1.0.0
APP_DEBUG=true

# Database Configuration
DATABASE_URL="postgresql://barberpro:barberpro_dev_password@localhost:5432/barberpro_dev"
POSTGRES_USER=barberpro
POSTGRES_PASSWORD=barberpro_dev_password
POSTGRES_DB=barberpro_dev
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_TTL=3600

# Backend API Configuration
PORT=3000
API_BASE_URL=http://localhost:3000
APP_URL=http://localhost:5173
FRONTEND_URL=http://localhost:5173
LOG_LEVEL=info

# JWT Authentication
JWT_SECRET=supersecret-change-in-production-environment
JWT_EXPIRES_IN=7d
BCRYPT_SALT_ROUNDS=12

# Frontend Configuration
VITE_API_URL=http://localhost:3000/api
VITE_APP_NAME=BarberPro
VITE_APP_VERSION=1.0.0

# Argentina Specific Settings
TIMEZONE=America/Argentina/Buenos_Aires
LOCALE=es-AR
CURRENCY=ARS

# Payment Integration (MercadoPago)
MERCADOPAGO_ENVIRONMENT=sandbox
MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_access_token_here
MERCADOPAGO_ACCESS_TOKEN_TEST=TEST-your_test_access_token_here
MERCADOPAGO_PUBLIC_KEY=your_mercadopago_public_key_here
MERCADOPAGO_PUBLIC_KEY_TEST=TEST-your_test_public_key_here
MERCADOPAGO_WEBHOOK_SECRET=your_webhook_secret_here
MERCADOPAGO_WEBHOOK_SECRET_TEST=your_test_webhook_secret_here
MERCADOPAGO_TIMEOUT=15000
MERCADOPAGO_INTEGRATION_ID=barberpro-v1
MERCADOPAGO_BASE_URL=https://api.mercadopago.com

# Argentina Payment Configuration
PLATFORM_COMMISSION_STANDARD=0.035
PLATFORM_COMMISSION_HIGH_VOLUME=0.028
PLATFORM_COMMISSION_PREMIUM=0.025
PAYOUT_HOLD_DAYS=10
MINIMUM_PAYOUT_AMOUNT=1000
PAYMENT_INSTALLMENTS_MAX=12
PAYMENT_TICKET_EXPIRY_DAYS=3
PAYMENT_RETRY_ATTEMPTS=3
PAYMENT_RETRY_DELAY_MS=5000

# Argentina Tax Configuration (AFIP)
TAX_IVA_RATE=0.21
TAX_WITHHOLDING_ENABLED=true
AFIP_INTEGRATION_ENABLED=true
ELECTRONIC_INVOICE_POINT_OF_SALE=1

# Webhook Configuration
WEBHOOK_SIGNATURE_VALIDATION=true
WEBHOOK_RETRY_ATTEMPTS=5
WEBHOOK_TIMEOUT_MS=10000

# Payment Security
PAYMENT_DATA_ENCRYPTION_KEY=your_32_character_encryption_key_here
PCI_COMPLIANCE_MODE=true
PAYMENT_AUDIT_LOGGING=true

# Payment Testing
ENABLE_PAYMENT_SIMULATION=true
TEST_PAYMENT_SUCCESS_RATE=0.95
PAYMENT_DEBUG_LOGGING=true

# Payment Monitoring
PAYMENT_SUCCESS_RATE_THRESHOLD=0.95
PAYMENT_RESPONSE_TIME_THRESHOLD=5000
ENABLE_PAYMENT_METRICS=true
PAYMENT_ALERT_EMAIL=admin@barberpro.com.ar

# Email Configuration (Future use)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@barberpro.com.ar

# WhatsApp Business API (Future use)
WHATSAPP_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_WEBHOOK_VERIFY_TOKEN=

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=http://localhost:5173
BCRYPT_SALT_ROUNDS=12

# Development Tools
ENABLE_SWAGGER=true
SWAGGER_HOST=localhost:3000