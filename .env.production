# BarberPro Production Environment Configuration
NODE_ENV=production
PORT=3000
APP_URL=https://barberpro.com.ar
FRONTEND_URL=https://barberpro.com.ar

# Database Configuration (Railway PostgreSQL - Production)
DATABASE_URL=${{Railway.DATABASE_URL}}
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20

# Redis Configuration (Railway Redis - Production)
REDIS_URL=${{Railway.REDIS_URL}}
REDIS_TTL=3600

# JWT Configuration
JWT_SECRET=${{Railway.JWT_SECRET}}
JWT_EXPIRES_IN="7d"

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=${{Railway.AWS_ACCESS_KEY_ID}}
AWS_SECRET_ACCESS_KEY=${{Railway.AWS_SECRET_ACCESS_KEY}}
AWS_REGION="us-east-1"
AWS_S3_BUCKET="barberpro-production-uploads"

# MercadoPago Configuration (Production)
MERCADOPAGO_ACCESS_TOKEN=${{Railway.MERCADOPAGO_ACCESS_TOKEN}}
MERCADOPAGO_PUBLIC_KEY=${{Railway.MERCADOPAGO_PUBLIC_KEY}}
MERCADOPAGO_WEBHOOK_SECRET=${{Railway.MERCADOPAGO_WEBHOOK_SECRET}}

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER=${{Railway.SMTP_USER}}
SMTP_PASS=${{Railway.SMTP_PASS}}
FROM_EMAIL="noreply@barberpro.com.ar"

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring & Logging
LOG_LEVEL="warn"
SENTRY_DSN=${{Railway.SENTRY_DSN}}

# Argentina-specific Configuration
DEFAULT_TIMEZONE="America/Argentina/Buenos_Aires"
DEFAULT_CURRENCY="ARS"
DEFAULT_LANGUAGE="es-AR"