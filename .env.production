# ============================================================================
# BarberPro Production Environment Configuration
# Railway Template Variables: Use ${{Railway.VARIABLE_NAME}} syntax
# ============================================================================

# Application Environment
NODE_ENV=production
APP_NAME=BarberPro
APP_VERSION=1.0.0
APP_DEBUG=false
PORT=3000
HOST=0.0.0.0

# URLs Configuration
API_BASE_URL=https://api.barberpro.com.ar
APP_URL=https://barberpro.com.ar
FRONTEND_URL=https://barberpro.com.ar
CORS_ORIGIN=https://barberpro.com.ar

# Database Configuration (Railway PostgreSQL - Production)
DATABASE_URL=${{Railway.DATABASE_URL}}
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20
DATABASE_TIMEOUT=60000

# Redis Configuration (Railway Redis - Production)
REDIS_URL=${{Railway.REDIS_URL}}
REDIS_TTL=3600

# Authentication & Security (Production Hardened)
JWT_SECRET=${{Railway.JWT_SECRET}}
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=24h
BCRYPT_SALT_ROUNDS=12

# Rate Limiting (Strict for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend Configuration
VITE_API_URL=https://api.barberpro.com.ar/api
VITE_APP_NAME=BarberPro
VITE_APP_VERSION=1.0.0
VITE_APP_URL=https://barberpro.com.ar

# Argentina Configuration
TIMEZONE=America/Argentina/Buenos_Aires
LOCALE=es-AR
CURRENCY=ARS
COUNTRY_CODE=AR

# Payment Integration (MercadoPago Production)
MERCADOPAGO_ACCESS_TOKEN=${{Railway.MERCADOPAGO_ACCESS_TOKEN}}
MERCADOPAGO_PUBLIC_KEY=${{Railway.MERCADOPAGO_PUBLIC_KEY}}
MERCADOPAGO_WEBHOOK_SECRET=${{Railway.MERCADOPAGO_WEBHOOK_SECRET}}
MERCADOPAGO_SANDBOX=false
PAYMENT_CURRENCY=ARS
PAYMENT_SUCCESS_URL=https://barberpro.com.ar/payment/success
PAYMENT_FAILURE_URL=https://barberpro.com.ar/payment/failure

# Email Configuration (Production SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=${{Railway.SMTP_USER}}
SMTP_PASS=${{Railway.SMTP_PASS}}
FROM_EMAIL=noreply@barberpro.com.ar
FROM_NAME=BarberPro

# File Upload & Storage (AWS S3 Production)
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
AWS_ACCESS_KEY_ID=${{Railway.AWS_ACCESS_KEY_ID}}
AWS_SECRET_ACCESS_KEY=${{Railway.AWS_SECRET_ACCESS_KEY}}
AWS_REGION=sa-east-1
AWS_S3_BUCKET=barberpro-production-uploads

# Monitoring & Error Tracking (Production)
LOG_LEVEL=warn
SENTRY_DSN=${{Railway.SENTRY_DSN}}
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=1.0.0
NEWRELIC_LICENSE_KEY=${{Railway.NEWRELIC_LICENSE_KEY}}
NEWRELIC_APP_NAME=BarberPro-Production
DATADOG_API_KEY=${{Railway.DATADOG_API_KEY}}
DATADOG_SERVICE_NAME=barberpro
DATADOG_ENV=production

# WhatsApp Business API (Production)
WHATSAPP_TOKEN=${{Railway.WHATSAPP_TOKEN}}
WHATSAPP_PHONE_NUMBER_ID=${{Railway.WHATSAPP_PHONE_NUMBER_ID}}
WHATSAPP_WEBHOOK_VERIFY_TOKEN=${{Railway.WHATSAPP_WEBHOOK_VERIFY_TOKEN}}
WHATSAPP_BUSINESS_ACCOUNT_ID=${{Railway.WHATSAPP_BUSINESS_ACCOUNT_ID}}

# Development Tools (Disabled in production)
ENABLE_SWAGGER=false
SWAGGER_HOST=

# Argentina Tax Integration (AFIP Production)
AFIP_ENVIRONMENT=production
AFIP_CUIT=${{Railway.AFIP_CUIT}}
AFIP_CERTIFICATE_PATH=${{Railway.AFIP_CERTIFICATE_PATH}}
AFIP_PRIVATE_KEY_PATH=${{Railway.AFIP_PRIVATE_KEY_PATH}}
AFIP_PASSPHRASE=${{Railway.AFIP_PASSPHRASE}}

# Social Media Integration
FACEBOOK_APP_ID=${{Railway.FACEBOOK_APP_ID}}
FACEBOOK_APP_SECRET=${{Railway.FACEBOOK_APP_SECRET}}
INSTAGRAM_ACCESS_TOKEN=${{Railway.INSTAGRAM_ACCESS_TOKEN}}
GOOGLE_PLACES_API_KEY=${{Railway.GOOGLE_PLACES_API_KEY}}

# Push Notifications
FCM_SERVER_KEY=${{Railway.FCM_SERVER_KEY}}
FCM_SENDER_ID=${{Railway.FCM_SENDER_ID}}
VAPID_PUBLIC_KEY=${{Railway.VAPID_PUBLIC_KEY}}
VAPID_PRIVATE_KEY=${{Railway.VAPID_PRIVATE_KEY}}
VAPID_SUBJECT=mailto:admin@barberpro.com.ar

# Feature Flags for Production
FEATURE_PAYMENTS_ENABLED=true
FEATURE_WHATSAPP_ENABLED=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_PUSH_NOTIFICATIONS=true
FEATURE_SOCIAL_LOGIN=true
FEATURE_ADVANCED_BOOKING=true

# Railway Specific
RAILWAY_ENVIRONMENT=production
RAILWAY_SERVICE_NAME=barberpro-production

# Performance & Caching (Production Optimized)
CACHE_TTL=3600
SESSION_SECRET=${{Railway.SESSION_SECRET}}
SESSION_MAX_AGE=3600000

# CDN Configuration (Production)
CDN_URL=https://cdn.barberpro.com.ar
STATIC_ASSETS_URL=https://assets.barberpro.com.ar

# Backup Configuration (Production)
BACKUP_S3_BUCKET=barberpro-production-backups
BACKUP_S3_ACCESS_KEY=${{Railway.BACKUP_S3_ACCESS_KEY}}
BACKUP_S3_SECRET_KEY=${{Railway.BACKUP_S3_SECRET_KEY}}
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Analytics & Tracking
GA_TRACKING_ID=${{Railway.GA_TRACKING_ID}}

# Argentina APIs
CORREO_ARGENTINO_API_KEY=${{Railway.CORREO_ARGENTINO_API_KEY}}
BANCO_NACION_API_KEY=${{Railway.BANCO_NACION_API_KEY}}