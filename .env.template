# ============================================================================
# BarberPro Environment Configuration Template
# This file contains ALL environment variables for ALL environments
# Copy and customize for specific environments
# ============================================================================

# ============================================================================
# Application Environment
# ============================================================================
NODE_ENV=development
APP_NAME=BarberPro
APP_VERSION=1.0.0
APP_DEBUG=true

# ============================================================================
# Server Configuration
# ============================================================================
PORT=3000
HOST=0.0.0.0
API_BASE_URL=http://localhost:3000
LOG_LEVEL=info
ENABLE_SWAGGER=true
SWAGGER_HOST=localhost:3000

# ============================================================================
# Database Configuration (PostgreSQL)
# ============================================================================
DATABASE_URL="postgresql://barberpro:barberpro_password@localhost:5432/barberpro_db"
POSTGRES_USER=barberpro
POSTGRES_PASSWORD=barberpro_password
POSTGRES_DB=barberpro_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Database Pool Configuration
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_TIMEOUT=30000

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_URL="redis://localhost:6379"
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# ============================================================================
# Authentication & Security
# ============================================================================
JWT_SECRET=supersecret-change-in-production-environment-use-strong-random-key
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
BCRYPT_SALT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# Frontend Configuration (Vite/SvelteKit)
# ============================================================================
VITE_API_URL=http://localhost:3000/api
VITE_APP_NAME=BarberPro
VITE_APP_VERSION=1.0.0
VITE_APP_URL=http://localhost:5173

# ============================================================================
# Argentina-Specific Configuration
# ============================================================================
TIMEZONE=America/Argentina/Buenos_Aires
LOCALE=es-AR
CURRENCY=ARS
COUNTRY_CODE=AR

# Argentina Business Hours
BUSINESS_HOURS_START=09:00
BUSINESS_HOURS_END=20:00
BUSINESS_TIMEZONE=America/Argentina/Buenos_Aires

# ============================================================================
# Payment Integration (MercadoPago)
# ============================================================================
MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_access_token_here
MERCADOPAGO_PUBLIC_KEY=your_mercadopago_public_key_here
MERCADOPAGO_WEBHOOK_SECRET=your_webhook_secret_here
MERCADOPAGO_SANDBOX=true

# Payment Configuration
PAYMENT_CURRENCY=ARS
PAYMENT_SUCCESS_URL=http://localhost:5173/payment/success
PAYMENT_FAILURE_URL=http://localhost:5173/payment/failure
PAYMENT_PENDING_URL=http://localhost:5173/payment/pending

# ============================================================================
# Email Configuration
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@barberpro.com.ar
FROM_NAME=BarberPro

# Email Templates
EMAIL_TEMPLATES_DIR=./templates/emails
EMAIL_SUPPORT=soporte@barberpro.com.ar

# ============================================================================
# WhatsApp Business API
# ============================================================================
WHATSAPP_TOKEN=your_whatsapp_business_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id

# ============================================================================
# File Upload & Storage
# ============================================================================
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
MAX_FILES_PER_UPLOAD=5

# Cloud Storage (AWS S3 or compatible)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=sa-east-1
AWS_S3_BUCKET=barberpro-uploads
AWS_S3_PUBLIC_URL=https://your-bucket.s3.sa-east-1.amazonaws.com

# ============================================================================
# Monitoring & Analytics
# ============================================================================
# Sentry Error Tracking
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=1.0.0

# New Relic APM
NEWRELIC_LICENSE_KEY=your_newrelic_license_key
NEWRELIC_APP_NAME=BarberPro

# DataDog
DATADOG_API_KEY=your_datadog_api_key
DATADOG_SERVICE_NAME=barberpro
DATADOG_ENV=development

# Google Analytics
GA_TRACKING_ID=GA-XXXXXXXXX

# ============================================================================
# Argentina Tax Integration (AFIP)
# ============================================================================
AFIP_ENVIRONMENT=sandbox
AFIP_CUIT=your_business_cuit
AFIP_CERTIFICATE_PATH=./certificates/afip.pem
AFIP_PRIVATE_KEY_PATH=./certificates/afip.key
AFIP_PASSPHRASE=your_certificate_passphrase

# ============================================================================
# Social Media Integration
# ============================================================================
# Facebook/Meta
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Instagram Business
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token

# Google Places API
GOOGLE_PLACES_API_KEY=your_google_places_api_key

# ============================================================================
# Push Notifications
# ============================================================================
# Firebase Cloud Messaging
FCM_SERVER_KEY=your_fcm_server_key
FCM_SENDER_ID=your_fcm_sender_id

# Web Push
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_SUBJECT=mailto:admin@barberpro.com.ar

# ============================================================================
# Development Tools
# ============================================================================
# Database Seeding
SEED_ADMIN_EMAIL=admin@barberpro.com.ar
SEED_ADMIN_PASSWORD=admin123456
SEED_SAMPLE_DATA=true

# Testing Configuration
TEST_DATABASE_URL="postgresql://barberpro:barberpro_password@localhost:5432/barberpro_test"
TEST_REDIS_URL="redis://localhost:6379/1"

# ============================================================================
# Performance & Caching
# ============================================================================
CACHE_TTL=3600
SESSION_SECRET=your_session_secret_key
SESSION_MAX_AGE=604800000

# CDN Configuration
CDN_URL=https://cdn.barberpro.com.ar
STATIC_ASSETS_URL=https://assets.barberpro.com.ar

# ============================================================================
# Argentina-Specific APIs
# ============================================================================
# Argentina Postal Code API
CORREO_ARGENTINO_API_KEY=your_correo_argentino_api_key

# Argentina Bank APIs (for payment verification)
BANCO_NACION_API_KEY=your_banco_nacion_api_key

# ============================================================================
# Feature Flags
# ============================================================================
FEATURE_PAYMENTS_ENABLED=true
FEATURE_WHATSAPP_ENABLED=false
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_PUSH_NOTIFICATIONS=false
FEATURE_SOCIAL_LOGIN=false
FEATURE_ADVANCED_BOOKING=true

# ============================================================================
# Backup & Recovery
# ============================================================================
BACKUP_S3_BUCKET=barberpro-backups
BACKUP_S3_ACCESS_KEY=your_backup_s3_access_key
BACKUP_S3_SECRET_KEY=your_backup_s3_secret_key
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# ============================================================================
# Railway Specific (when deploying to Railway)
# ============================================================================
RAILWAY_ENVIRONMENT=development
RAILWAY_SERVICE_NAME=barberpro
RAILWAY_PROJECT_ID=your_railway_project_id

# ============================================================================
# Docker Configuration
# ============================================================================
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_TAG=latest
COMPOSE_PROJECT_NAME=barberpro