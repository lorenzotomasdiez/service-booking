# Production Environment Configuration for BarberPro
NODE_ENV=production

# Database Configuration (Railway PostgreSQL)
# This will be provided by Railway
DATABASE_URL=${DATABASE_URL}

# Redis Configuration (Railway Redis)
# This will be provided by Railway
REDIS_URL=${REDIS_URL}

# Backend API Configuration
PORT=${PORT:-3000}
API_BASE_URL=${RAILWAY_STATIC_URL}
LOG_LEVEL=warn

# JWT Authentication - MUST BE CHANGED IN PRODUCTION
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=7d

# Frontend Configuration
VITE_API_URL=${RAILWAY_STATIC_URL}/api
VITE_APP_NAME=BarberPro
VITE_APP_VERSION=1.0.0

# Argentina Specific Settings
TIMEZONE=America/Argentina/Buenos_Aires
LOCALE=es-AR
CURRENCY=ARS

# Payment Integration (MercadoPago)
MERCADOPAGO_ACCESS_TOKEN=${MERCADOPAGO_ACCESS_TOKEN}
MERCADOPAGO_PUBLIC_KEY=${MERCADOPAGO_PUBLIC_KEY}
MERCADOPAGO_WEBHOOK_SECRET=${MERCADOPAGO_WEBHOOK_SECRET}

# Email Configuration
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=587
SMTP_USER=${SMTP_USER}
SMTP_PASS=${SMTP_PASS}
FROM_EMAIL=noreply@barberpro.com.ar

# WhatsApp Business API
WHATSAPP_TOKEN=${WHATSAPP_TOKEN}
WHATSAPP_PHONE_NUMBER_ID=${WHATSAPP_PHONE_NUMBER_ID}
WHATSAPP_WEBHOOK_VERIFY_TOKEN=${WHATSAPP_WEBHOOK_VERIFY_TOKEN}

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Rate Limiting (Argentina optimized)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Security
CORS_ORIGIN=https://barberpro.com.ar,https://www.barberpro.com.ar
BCRYPT_SALT_ROUNDS=12

# Production Tools
ENABLE_SWAGGER=false
SWAGGER_HOST=barberpro.com.ar

# Monitoring & APM
SENTRY_DSN=${SENTRY_DSN}
NEWRELIC_LICENSE_KEY=${NEWRELIC_LICENSE_KEY}
DATADOG_API_KEY=${DATADOG_API_KEY}

# Backup Configuration
BACKUP_S3_BUCKET=${BACKUP_S3_BUCKET}
BACKUP_S3_ACCESS_KEY=${BACKUP_S3_ACCESS_KEY}
BACKUP_S3_SECRET_KEY=${BACKUP_S3_SECRET_KEY}
BACKUP_S3_REGION=us-east-1

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000