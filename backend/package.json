{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "typecheck": "tsc --noEmit",
    "format:check": "prettier --check 'src/**/*.{ts,js,json}'",
    "format:fix": "prettier --write 'src/**/*.{ts,js,json}'",
    "seed": "tsx prisma/seed.ts",
    "db:reset": "npx prisma migrate reset --force && npm run seed",
    "db:migrate": "npx prisma migrate dev",
    "db:migrate:deploy": "npx prisma migrate deploy",
    "db:generate": "npx prisma generate",
    "db:studio": "npx prisma studio",
    "backup": "scripts/backup.sh",
    "restore": "scripts/restore.sh",
    "deploy:production": "scripts/deploy-production.sh production",
    "deploy:staging": "scripts/deploy-production.sh staging",
    "deploy:rollback": "scripts/deploy-production.sh rollback",
    "monitoring:start": "docker-compose -f docker-compose.production.yml up prometheus grafana loki -d",
    "monitoring:stop": "docker-compose -f docker-compose.production.yml down prometheus grafana loki",
    "security:audit": "npm audit && docker run --rm -v $(pwd):/app clair:latest",
    "docker:build": "docker build -t barberpro-backend:latest .",
    "docker:run": "docker run -p 3000:3000 --env-file .env.production barberpro-backend:latest",
    "day9:demo": "tsx day9-demo.ts",
    "day9:payment-demo": "tsx day9-demo.ts",
    "day9:simple-demo": "tsx day9-simple-demo.ts",
    "day10:enterprise-demo": "tsx day10-enterprise-demo.ts",
    "day10:ai-demo": "tsx day10-ai-demo.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/multipart": "^9.2.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@fastify/type-provider-typebox": "^5.2.0",
    "@prisma/client": "^6.15.0",
    "@sinclair/typebox": "^0.34.41",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.3",
    "@types/socket.io": "^3.0.1",
    "@types/uuid": "^9.0.8",
    "axios": "^1.6.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "csv-writer": "^1.6.0",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "express-validator": "^7.0.1",
    "fastify": "^5.6.0",
    "jsonwebtoken": "^9.0.2",
    "mercadopago": "^2.9.0",
    "pdfkit": "^0.15.0",
    "pino-pretty": "^13.1.1",
    "prisma": "^6.15.0",
    "redis": "^5.8.2",
    "sharp": "^0.34.3",
    "socket.io": "^4.8.1",
    "uuid": "^8.3.2",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express-validator": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.1",
    "@types/pdfkit": "^0.13.4",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "artillery": "^2.0.24",
    "eslint": "^9.12.0",
    "nodemon": "^3.1.10",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
