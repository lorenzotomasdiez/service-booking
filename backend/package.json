{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "test:e2e": "jest --testPathPattern=e2e",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "typecheck": "tsc --noEmit",
    "format:check": "prettier --check 'src/**/*.{ts,js,json}'",
    "format:fix": "prettier --write 'src/**/*.{ts,js,json}'",
    "seed": "tsx prisma/seed.ts",
    "db:reset": "npx prisma migrate reset --force && npm run seed",
    "db:migrate": "npx prisma migrate dev",
    "db:migrate:deploy": "npx prisma migrate deploy",
    "db:generate": "npx prisma generate",
    "db:studio": "npx prisma studio",
    "backup": "scripts/backup.sh",
    "restore": "scripts/restore.sh",
    "deploy:production": "scripts/deploy-production.sh production",
    "deploy:staging": "scripts/deploy-production.sh staging",
    "deploy:rollback": "scripts/deploy-production.sh rollback",
    "monitoring:start": "docker-compose -f docker-compose.production.yml up prometheus grafana loki -d",
    "monitoring:stop": "docker-compose -f docker-compose.production.yml down prometheus grafana loki",
    "security:audit": "npm audit && docker run --rm -v $(pwd):/app clair:latest",
    "performance:test": "artillery run tests/performance/load-test.yml",
    "docker:build": "docker build -t barberpro-backend:latest .",
    "docker:run": "docker run -p 3000:3000 --env-file .env.production barberpro-backend:latest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/multipart": "^9.2.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@fastify/type-provider-typebox": "^5.2.0",
    "@prisma/client": "^6.15.0",
    "@sinclair/typebox": "^0.34.41",
    "@types/bcryptjs": "^2.4.6",
    "@types/socket.io": "^3.0.1",
    "bcryptjs": "^3.0.2",
    "fastify": "^5.6.0",
    "pino-pretty": "^13.1.1",
    "prisma": "^6.15.0",
    "redis": "^5.8.2",
    "socket.io": "^4.8.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "artillery": "^2.0.24",
    "eslint": "^9.12.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
