# ============================================================================
# Docker Environment Overrides
# This file contains Docker-specific environment variable overrides
# ============================================================================

# Docker-specific database configuration
# Override localhost URLs with Docker service names
DATABASE_URL=postgresql://barberpro:barberpro_dev_password@postgres:5432/barberpro_dev
REDIS_URL=redis://redis:6379

# Docker-specific API URLs
API_BASE_URL=http://backend:3000
APP_URL=http://frontend:5173
FRONTEND_URL=http://frontend:5173

# Docker-specific frontend URLs
VITE_API_URL=http://localhost:3000/api
VITE_APP_URL=http://localhost:5173

# Docker-specific CORS settings
CORS_ORIGIN=http://localhost:5173

# Docker-specific port configuration
PORT=3000

# Docker-specific logging
LOG_LEVEL=info

# Docker-specific development settings
NODE_ENV=development
APP_DEBUG=true
ENABLE_SWAGGER=true

# Docker-specific Argentina settings
TIMEZONE=America/Argentina/Buenos_Aires
LOCALE=es-AR
CURRENCY=ARS

# Docker-specific payment settings (development)
MERCADOPAGO_ENVIRONMENT=sandbox
MERCADOPAGO_ACCESS_TOKEN=${MERCADOPAGO_ACCESS_TOKEN_TEST}
MERCADOPAGO_PUBLIC_KEY=${MERCADOPAGO_PUBLIC_KEY_TEST}
MERCADOPAGO_WEBHOOK_SECRET=${MERCADOPAGO_WEBHOOK_SECRET_TEST}

# Docker-specific rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Docker-specific security
BCRYPT_SALT_ROUNDS=12
JWT_EXPIRES_IN=7d

# Docker-specific file upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Docker-specific monitoring (disabled for local development)
SENTRY_DSN=
NEWRELIC_LICENSE_KEY=
DATADOG_API_KEY=

# Docker-specific email (disabled for local development)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@barberpro.local

# Docker-specific WhatsApp (disabled for local development)
WHATSAPP_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_WEBHOOK_VERIFY_TOKEN=
