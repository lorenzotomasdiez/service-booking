{
  "name": "sms-mock-server",
  "version": "1.0.0",
  "description": "Mock SMS Gateway (Twilio-style) server for local development and testing",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "sms",
    "mock",
    "argentina",
    "twilio",
    "messaging"
  ],
  "author": "BarberPro Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "body-parser": "^1.20.2",
    "winston": "^3.11.0",
    "swagger-ui-express": "^5.0.0",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!tests/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
