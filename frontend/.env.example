# Frontend Environment Configuration for BarberPro
# Copy this file to .env and fill in your values
# Only public environment variables that are safe to expose to the browser

# Frontend Configuration
PUBLIC_API_URL=http://localhost:3000/api
PUBLIC_SOCKET_URL=http://localhost:3000
PUBLIC_APP_NAME=BarberPro
PUBLIC_APP_VERSION=1.0.0

# Argentina Specific Settings
PUBLIC_TIMEZONE=America/Argentina/Buenos_Aires
PUBLIC_LOCALE=es-AR
PUBLIC_CURRENCY=ARS

# MercadoPago Public Key (only public key, never private tokens)
PUBLIC_MERCADOPAGO_PUBLIC_KEY=your_mercadopago_public_key_here

# Feature Flags
PUBLIC_ENABLE_SOCIAL_LOGIN=true
PUBLIC_ENABLE_WHATSAPP_SUPPORT=true
PUBLIC_SUPPORT_WHATSAPP=+5491123456789

# Argentina Contact Information
PUBLIC_SUPPORT_EMAIL=soporte@barberpro.com.ar
PUBLIC_SUPPORT_PHONE=+54 11 1234-5678

# Development Mode
NODE_ENV=development