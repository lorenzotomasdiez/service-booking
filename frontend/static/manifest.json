  "categories": ["business", "lifestyle", "productivity"],
  "lang": "es-AR",
  "dir": "ltr",
  
  "prefer_related_applications": false,
  
  "shortcuts": [
    {
      "name": "Nueva Reserva",
      "short_name": "Reservar",
      "description": "Crear una nueva reserva rápidamente",
      "url": "/booking/new",
      "icons": [
        {
          "src": "/icons/shortcut-booking.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Mis Reservas",
      "short_name": "Reservas",
      "description": "Ver mis reservas activas",
      "url": "/dashboard/client/bookings",
      "icons": [
        {
          "src": "/icons/shortcut-bookings.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Buscar Servicios",
      "short_name": "Buscar",
      "description": "Encontrar servicios cerca de mí",
      "url": "/services/search",
      "icons": [
        {
          "src": "/icons/shortcut-search.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  
  "protocol_handlers": [
    {
      "protocol": "web+barberpro",
      "url": "/deep-link?url=%s"
    }
  ],
  
  "file_handlers": [
    {
      "action": "/share-target",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif"]
      }
    }
  ],
  
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "image",
          "accept": ["image/jpeg", "image/jpg", "image/png", "image/gif"]
        }
      ]
    }
  },
  
  "display_override": ["window-controls-overlay", "minimal-ui", "standalone", "browser"],
  
  "launch_handler": {
    "client_mode": ["navigate-new", "navigate-existing"]
  },
  
  "edge_side_panel": {
    "preferred_width": 400
  }
}